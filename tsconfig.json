{
  "compilerOptions": {
    "types": ["jest", "node"],
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules",  "tests/**/*"],
  "baseUrl": "./",
  "paths": {
    "@/*": ["src/*"]
  }
  
}